{
    "extends": ["tslint:recommended"],
    "rules": {
      "semicolon": [true, "always"],
      "quotemark": [true, "single"],
      "trailing-comma": [true, {
        "singleline": "never",
        "multiline": "always"
      }],
      "indent": [true, "spaces", 2],
      "no-console": false,
      "no-implicit-dependencies": [true, "dev"],
      "object-literal-sort-keys": false,
      "max-line-length": [true, 120]
    }
  }